#!/bin/bash
set -e

echo "Setting up cron for Routine Tracker..."

# Cron is already installed in the Docker image

# Create crontab file for rails user
echo "Creating crontab for rails user..."
cat > /tmp/routine-crontab << 'EOF'
# Routine Tracker Cron Jobs
RAILS_ENV=production
BUNDLE_PATH=/usr/local/bundle
# Send reports every 15 minutes
*/15 * * * * cd /rails && /usr/local/bundle/bin/bundle exec rake reports:send_due >> /rails/log/cron.log 2>&1
# Send daily backups at 3:00 AM
0 3 * * * cd /rails && /usr/local/bundle/bin/bundle exec rake backups:send_daily >> /rails/log/cron.log 2>&1

EOF

# Install crontab for rails user (not root)
crontab /tmp/routine-crontab

# Create log file in a location the rails user can write to
touch /rails/log/cron.log

echo "Starting cron daemon..."
# Run cron in foreground mode (no PID file needed in foreground mode)
exec cron -f