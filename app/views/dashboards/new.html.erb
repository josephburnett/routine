<div class="container">
  <nav class="main-nav">
    <%= link_to "Forms", forms_path %>
    <%= link_to "Sections", sections_path %>
    <%= link_to "Questions", questions_path %>
    <%= link_to "Answers", answers_path %>
    <%= link_to "Responses", responses_path %>
    <%= link_to "Metrics", metrics_path %>
    <%= link_to "Dashboards", dashboards_path %>
    <%= link_to "Logout", logout_path, data: { "turbo-method": :delete } %>
  </nav>

  <h1>New Dashboard</h1>

  <%= link_to "← Back to Dashboards", dashboards_path, class: "back-link" %>

  <div class="card">
    <%= form_with model: @dashboard, local: true do |form| %>
      <% if @dashboard.errors.any? %>
        <div class="error-messages">
          <h4><%= pluralize(@dashboard.errors.count, "error") %> prohibited this dashboard from being saved:</h4>
          <ul>
            <% @dashboard.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, required: true, placeholder: "Enter dashboard name" %>
      </div>
      
      <div class="field">
        <%= form.label :metric_ids, "Metrics" %>
        <%= form.collection_check_boxes :metric_ids, @metrics, :id, :id, { checked: @dashboard.metric_ids }, { class: 'metric-checkbox' } do |b| %>
          <div class="checkbox-item">
            <%= b.check_box %>
            <%= b.label do %>
              <%= b.object.display_name %>
            <% end %>
          </div>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit "Create Dashboard" %>
      </div>
    <% end %>
  </div>
</div>