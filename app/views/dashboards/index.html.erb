<div class="container">
  <nav class="main-nav">
    <%= link_to "Forms", forms_path %>
    <%= link_to "Sections", sections_path %>
    <%= link_to "Questions", questions_path %>
    <%= link_to "Answers", answers_path %>
    <%= link_to "Responses", responses_path %>
    <%= link_to "Metrics", metrics_path %>
    <%= link_to "Dashboards", dashboards_path, class: "active" %>
    <%= link_to "Logout", logout_path, data: { "turbo-method": :delete } %>
  </nav>

  <% if logged_in? %>
    <div class="index-header">
      <h1>Dashboards</h1>
      <%= link_to "New Dashboard", new_dashboard_path(namespace: @current_namespace), class: "btn btn-primary" %>
    </div>

    <!-- Breadcrumb Navigation -->
    <% if @breadcrumbs.length > 1 %>
      <div class="breadcrumb-nav">
        <% @breadcrumbs.each_with_index do |(name, path), index| %>
          <% if index == @breadcrumbs.length - 1 %>
            <span class="breadcrumb-current"><%= name %></span>
          <% else %>
            <%= link_to name, path, class: "breadcrumb-link" %>
            <span class="breadcrumb-separator">‚Ä∫</span>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <!-- Folder Navigation -->
    <% if @folders.any? %>
      <div class="folders-section">
        <h3>Folders</h3>
        <div class="folder-grid">
          <% @folders.each do |folder| %>
            <% folder_namespace = @current_namespace.present? ? "#{@current_namespace}.#{folder}" : folder %>
            <div class="folder-item">
              <%= link_to dashboards_path(namespace: folder_namespace), class: "folder-link" do %>
                <span class="folder-icon">üìÅ</span>
                <span class="folder-name"><%= folder %></span>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Items in Current Namespace -->
    <% if @items.any? %>
      <div class="items-section">
        <h3><%= @current_namespace.present? ? "Dashboards in #{@current_namespace}" : "Dashboards in Root" %></h3>
        <div class="index-grid">
          <% @items.each do |dashboard| %>
            <div class="index-card">
              <h4><%= link_to dashboard.name, dashboard_path(dashboard) %></h4>
              <p><strong>Metrics:</strong> <%= dashboard.metrics.count %></p>
              <p><strong>Created:</strong> <%= dashboard.created_at.strftime("%B %d, %Y") %></p>
              <div class="index-card-actions">
                <%= link_to "View", dashboard_path(dashboard) %>
                <%= link_to "Edit", edit_dashboard_path(dashboard) %>
                <%= link_to "Delete", soft_delete_dashboard_path(dashboard), 
                    data: { "turbo-method": :patch, confirm: "Are you sure?" }, 
                    class: "btn", 
                    style: "background-color: var(--error); color: var(--white);" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    <% elsif @folders.empty? %>
      <div class="empty-state">
        <h3>No dashboards yet</h3>
        <p>Create your first dashboard to organize your metrics visualizations.</p>
        <%= link_to "Create Dashboard", new_dashboard_path(namespace: @current_namespace), class: "btn btn-primary" %>
      </div>
    <% end %>
  <% end %>
</div>