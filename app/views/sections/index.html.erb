<h1>My Sections</h1>

<% if logged_in? %>
  <p>Welcome, <%= current_user.name %>!</p>
  
  <%= link_to "Logout", logout_path, data: { "turbo-method": :delete }, class: "logout-link" %>
  
  <% if @sections.any? %>
    <div class="sections-list">
      <% @sections.each do |section| %>
        <div class="section-item">
          <%= link_to section.name, section_path(section) %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>You haven't created any sections yet.</p>
  <% end %>
<% end %>
