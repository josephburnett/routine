<div class="container">
  <%= render 'shared/main_nav' %>

  <h1>New Section</h1>

  <%= link_to "← Back to Sections", sections_path(namespace: params[:namespace]), class: "back-link" %>

  <div class="card">
    <%= form_with model: @section, local: true, data: { turbo: false } do |form| %>
      <% if @section.errors.any? %>
        <div class="error-messages">
          <h4><%= pluralize(@section.errors.count, "error") %> prohibited this section from being saved:</h4>
          <ul>
            <% @section.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, required: true %>
      </div>

      <div class="field">
        <%= form.label :prompt %>
        <%= form.text_area :prompt %>
      </div>

      <%= render 'shared/namespace_field', form: form %>

      <div class="actions">
        <%= form.submit "Create Section" %>
      </div>
    <% end %>
  </div>
</div>