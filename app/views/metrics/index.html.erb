<div class="container">
  <nav class="main-nav">
    <%= link_to "Forms", forms_path %>
    <%= link_to "Sections", sections_path %>
    <%= link_to "Questions", questions_path %>
    <%= link_to "Answers", answers_path %>
    <%= link_to "Responses", responses_path %>
    <%= link_to "Metrics", metrics_path %>
    <%= link_to "Logout", logout_path, data: { "turbo-method": :delete } %>
  </nav>

  <div class="index-header">
    <h1>My Metrics</h1>
    <%= link_to "New Metric", new_metric_path, class: "btn btn-primary" %>
  </div>

  <% if @metrics.any? %>
    <div class="index-grid">
      <% @metrics.each do |metric| %>
        <div class="index-card">
          <h3><%= link_to metric.display_name, metric_path(metric) %></h3>
          <p>Function: <%= metric.function.capitalize %></p>
          <p><%= metric.resolution %> â€¢ <%= metric.width %></p>
          <div class="index-card-actions">
            <%= link_to "View", metric_path(metric) %>
            <%= link_to "Edit", edit_metric_path(metric) %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="card text-center">
      <p>You haven't created any metrics yet.</p>
      <%= link_to "Create Metric", new_metric_path, class: "btn btn-primary mt-2" %>
    </div>
  <% end %>
</div>
