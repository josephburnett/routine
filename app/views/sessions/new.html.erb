<div class="container">
  <h1>Login</h1>

  <div class="card">
    <%= form_with url: sessions_path, local: true do |form| %>
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, required: true %>
      </div>

      <div class="field">
        <%= form.label :password %>
        <%= form.password_field :password, required: true %>
      </div>

      <div class="actions">
        <%= form.submit "Login" %>
      </div>
    <% end %>
  </div>
</div>
